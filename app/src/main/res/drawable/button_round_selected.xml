<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item >

        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
            <corners
                android:radius="32dp"
                />
            <gradient
                android:angle="45"
                android:centerX="35%"
                android:centerColor="#4AA898"
                android:startColor="#E8E8E8"
                android:endColor="#000000"
                android:type="linear"
                />
            <padding
                android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp"
                />
            <size
                android:width="50dp"
                android:height="50dp"
                />
            <stroke
                android:width="1dp"
                android:color="#878787"
                />
        </shape>

    </item>
</selector>