<?xml version="1.0" encoding="utf-8"?>


<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >

        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
            <corners
                android:radius="32dp"
                />
            <gradient
                android:angle="45"
                android:centerX="35%"

            android:centerColor="@color/centre_button_color_pressed"
            android:startColor="@color/centre_button_color_pressed"
            android:endColor="@color/centre_button_color_pressed"
                android:type="linear"
                />
            <padding
                android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp"
                />
            <size
                android:width="@dimen/dp60"
                android:height="@dimen/dp60"
                />
            <stroke
                android:width="1dp"
                android:color="#fff"
                />
        </shape>

    </item>
