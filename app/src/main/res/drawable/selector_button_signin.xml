        <corners android:radius="10dp"></corners>
        <stroke android:width="2dp" android:color="@android:color/holo_red_dark"></stroke>
        <solid android:color="@android:color/holo_red_dark"></solid>
    </shape>

</item>
<item>
    <shape>
        <corners android:radius="10dp"></corners>
        <stroke android:width="2dp" android:color="@color/colorPrimaryDark"></stroke>
        <solid android:color="@color/colorPrimaryDark"></solid>

    </shape>

</item>
</selector>