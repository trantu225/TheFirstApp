<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item >

        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
            <corners
                android:radius="32dp"
                />
            <gradient
                android:angle="45"
                android:centerX="35%"

                android:centerColor="@color/green_6a"
                android:startColor="@color/green_6a"
                android:endColor="@color/green_6a"
                android:type="linear"
                />
            <padding
                android:left="@dimen/dp1"
                android:top="@dimen/dp1"
                android:right="@dimen/dp1"
                android:bottom="@dimen/dp1"
                />
            <size
                android:width="@dimen/dp80"
                android:height="@dimen/dp80"
                />
            <stroke
                android:width="@dimen/dp1"
                android:color="@color/green_6a"
                />
        </shape>

    </item>
</selector>