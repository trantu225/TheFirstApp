<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="tiwaco.thefirstapp.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp20"
                android:text="Họ và tên: "
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textSize="@dimen/sp14" />

            <TextView
                android:id="@+id/tv_hovaten"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp20"
                android:text=" "
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Display1"
                android:textSize="@dimen/sp14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp20"
                android:text="Địa chỉ:"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textSize="@dimen/sp14" />

            <TextView
                android:id="@+id/tv_diachi"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp20"
                android:text=" "
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Display1"
                android:textSize="@dimen/sp14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp20"
                android:text="Điện thoại:"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textSize="@dimen/sp14" />

            <EditText
                android:id="@+id/tv_dienthoai"
                android:layout_width="@dimen/dp200"
                android:layout_height="wrap_content"
                android:background="@android:drawable/editbox_background_normal"
                android:text=" "
                android:textSize="@dimen/sp14" />

            <Button
                android:id="@+id/btn_dienthoai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đổi"
                android:textSize="@dimen/sp14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chỉ số cũ:"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textSize="@dimen/sp14" />

            <TextView
                android:id="@+id/tv_chisocu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Display1"
                android:textSize="@dimen/sp14" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp100"
                android:text="m3 cũ:"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textSize="@dimen/sp14" />

            <TextView
                android:id="@+id/tv_m3cu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp100"
                android:text=""
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Display1"
                android:textSize="@dimen/sp14" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chỉ số mới:"
                        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                        android:textSize="@dimen/sp14" />

                    <EditText
                        android:id="@+id/txt_chisomoi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:drawable/editbox_background_normal"
                        android:textSize="@dimen/sp14" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="m3 mới:"
                        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                        android:textSize="@dimen/sp14" />

                    <EditText
                        android:id="@+id/txt_m3moi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:drawable/editbox_background_normal"
                        android:textSize="@dimen/sp14" />


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/btn_ghi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:onClick="buttonload"
                    android:scaleType="fitCenter"
                    android:src="@android:drawable/ic_input_add" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ghi chú:"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textSize="@dimen/sp14" />

            <EditText
                android:id="@+id/txt_ghichu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/editbox_background_normal"
                android:textSize="@dimen/sp14" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tình trạng đồng hồ:"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textSize="@dimen/sp14" />

            <EditText
                android:id="@+id/txt_tinhtrangDH"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/editbox_background_normal"
                android:textSize="@dimen/sp14" />


        </LinearLayout>

        <Button
            android:id="@+id/buttonsave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Button" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Danh sách đường:"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textSize="@dimen/sp14" />

            <TextView
                android:id="@+id/tv_danhsachduongchuaghi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp14" />


        </LinearLayout>
        <TextView
            android:id="@+id/textjson"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:text="" />

    </LinearLayout>


    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/colorPrimary"
        app:itemIconTint="@android:color/white"
        app:itemTextColor="@android:color/white"
        app:menu="@menu/mymenu" />


</RelativeLayout>
