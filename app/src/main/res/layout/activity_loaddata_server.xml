<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/lay_noidungload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp30"
        android:background="@android:drawable/alert_dark_frame"
        android:orientation="vertical">


        <TextView
            android:id="@+id/lb_nhanvientai"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Nhân viên lấy dữ liệu: "
            android:textColor="@color/white"
            android:textSize="@dimen/sp14"
            android:layout_margin="@dimen/dp3"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edt_nhanvientai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp3"
            android:background="@android:drawable/edit_text"
            android:maxLength="30"
            android:maxLines="1"
            android:inputType="text"
            android:padding="@dimen/dp3"
            android:textColor="@drawable/selector_loadserver"
            android:textSize="@dimen/sp14" />

        <TextView
            android:id="@+id/lb_matkhau"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Mật khẩu  lấy dữ liệu: "
            android:textColor="@color/white"
            android:textSize="@dimen/sp14"
            android:layout_margin="@dimen/dp3"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edt_matkhau"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp3"
            android:background="@android:drawable/edit_text"
            android:maxLength="30"
            android:maxLines="1"
            android:inputType="textPassword"
            android:padding="@dimen/dp3"
            android:textColor="@drawable/selector_loadserver"
            android:textSize="@dimen/sp14" />


        <TextView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Nhân viên ghi: "
            android:textColor="@color/white"
            android:textSize="@dimen/sp14"
            android:layout_margin="@dimen/dp3"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/edt_nhanvien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp3"
            android:background="@android:drawable/edit_text"
            android:maxLength="30"
            android:maxLines="1"
            android:inputType="text"
            android:padding="@dimen/dp3"
            android:textColor="@drawable/selector_loadserver"
            android:textSize="@dimen/sp14" />




        <TextView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Kỳ hóa đơn: "
                android:textColor="@color/white"
                android:textSize="@dimen/sp14"
                android:layout_margin="@dimen/dp3"
                android:textStyle="bold"/>

        <EditText
            android:id="@+id/edt_kyhd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp3"
            android:background="@android:drawable/edit_text"
            android:maxLength="6"
            android:maxLines="1"
            android:imeOptions="actionUnspecified"
            android:inputType="numberDecimal"
            android:padding="@dimen/dp3"
            android:textSize="@dimen/sp14" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dp3"
            android:text="@string/backup_luuy"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/sp14"
            android:textStyle="bold|italic" />
            <Button
                android:id="@+id/btn_GetDaTa"
                android:layout_width="@dimen/dp200"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp10"
                android:text="Lấy dữ liệu"
                android:layout_gravity="center"
                android:background="@drawable/selector_button_signin"
                android:textColor="@color/white"
                android:textSize="@dimen/sp14"
                android:layout_margin="@dimen/dp3"
                android:textStyle="bold"
               />

        <Button
            android:id="@+id/btn_Thoat"
            android:layout_width="@dimen/dp200"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp10"
            android:text="Thoát"
            android:layout_gravity="center"
            android:background="@drawable/selector_button_signin"
            android:textColor="@color/white"
            android:textSize="@dimen/sp14"
            android:layout_margin="@dimen/dp3"
            android:textStyle="bold"
            />





    </LinearLayout>

    <circleprogress.DonutProgress
        android:id="@+id/prgTime"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"

        app:donut_circle_starting_degree="269"
        app:donut_finished_color="#1bceed"
        app:donut_finished_stroke_width="5dp"
        app:donut_progress="10"
        app:donut_suffix_text=""
        app:donut_text="10"
        app:donut_text_color="#12941F"
        app:donut_text_size="10sp"
        app:donut_unfinished_color="#edefed"
        app:donut_unfinished_stroke_width="3dp"
        android:visibility="gone"/>
</LinearLayout>