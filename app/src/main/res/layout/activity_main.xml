<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tiwaco.thefirstapp.MainActivity"
    android:orientation="vertical">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp20"
        android:text="Họ và tên: "
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textSize="@dimen/sp14" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp20"
        android:id="@+id/tv_hovaten"
        android:text=" "
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Display1"
        android:textSize="@dimen/sp14" />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp20"
            android:text="Địa chỉ:"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textSize="@dimen/sp14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp20"
            android:id="@+id/tv_diachi"
            android:text=" "
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Display1"
            android:textSize="@dimen/sp14" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp20"
            android:text="Điện thoại:"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textSize="@dimen/sp14" />

        <EditText
            android:layout_width="@dimen/dp200"
            android:layout_height="wrap_content"
            android:id="@+id/tv_dienthoai"
            android:text=" "
            android:background="@android:drawable/editbox_background_normal"
            android:textSize="@dimen/sp14" />
        <Button
            android:id="@+id/btn_dienthoai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đổi"
            android:textSize="@dimen/sp14"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chỉ số cũ:"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textSize="@dimen/sp14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_chisocu"
            android:text=""
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Display1"
            android:textSize="@dimen/sp14" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="m3 cũ:"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textSize="@dimen/sp14"
            android:layout_marginLeft="@dimen/dp100"/>

        <TextView
            android:id="@+id/tv_m3cu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Display1"
            android:textSize="@dimen/sp14"
            android:layout_marginLeft="@dimen/dp100"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0.3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chỉ số mới:"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                    android:textSize="@dimen/sp14"  />

                <EditText
                    android:id="@+id/txt_chisomoi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp14"
                    android:background="@android:drawable/editbox_background_normal"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="m3 mới:"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                    android:textSize="@dimen/sp14"  />

                <EditText
                    android:id="@+id/txt_m3moi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp14"
                    android:background="@android:drawable/editbox_background_normal"/>


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/btn_ghi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:onClick="buttonload"
                android:scaleType="fitCenter"
                android:src="@android:drawable/ic_input_add" />

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ghi chú:"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textSize="@dimen/sp14" />

        <EditText
            android:id="@+id/txt_ghichu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp14"
            android:background="@android:drawable/editbox_background_normal"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tình trạng đồng hồ:"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textSize="@dimen/sp14"  />

        <EditText
            android:id="@+id/txt_tinhtrangDH"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp14"
            android:background="@android:drawable/editbox_background_normal"/>


    </LinearLayout>

    <Button
        android:id="@+id/buttonsave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Button" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Danh sách đường:"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textSize="@dimen/sp14"  />

        <TextView
            android:id="@+id/tv_danhsachduongchuaghi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp14" />



    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <TextView
            android:id="@+id/textjson"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:text="" />
    </ScrollView>

</LinearLayout>
