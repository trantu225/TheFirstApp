<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:drawable/alert_light_frame">

    <LinearLayout
        android:id="@+id/lay_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/cast_libraries_material_featurehighlight_outer_highlight_default_color"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TEXTO"
            android:id="@+id/text_dialog"
            android:layout_below="@+id/a"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="5dp"
            android:textSize="18sp"
            android:textColor="#FFFF66"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:gravity="center_horizontal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/lay_dialog"
        android:layout_centerHorizontal="true">


        <ListView
            android:id="@+id/ListThuHo"
            android:layout_width="match_parent"
            android:nestedScrollingEnabled="true"
            android:layout_height="0dp"
            android:layout_weight="1.82"></ListView>


        <Button
            android:id="@+id/btn_thanhtoanvainbiennhan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp10"
            android:background="@drawable/selector_button_signin"
            android:text="Thanh toán và in biên nhận"
            android:textAllCaps="false"
            android:textColor="#ffffffff" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true">

            <Button
                android:id="@+id/btn_xoalist"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp10"
                android:background="@drawable/selector_button_signin"
                android:text="Xóa hết"
                android:textAllCaps="false"
                android:textColor="#ffffffff" />

            <Button
                android:id="@+id/btn_thoat"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp10"
                android:background="@drawable/selector_button_signin"
                android:text="Thoát"
                android:textAllCaps="false"
                android:textColor="#ffffffff" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>